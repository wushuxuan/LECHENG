/* pages/homes/homes.wxss */
.homes{
  width:100%;  height:100vh;
  background-image: url('https://github.com/wushuxuan/LECHENG/blob/master/src/images/homes/a9aa7742212ee2b2ba9d4520bb33595f0f858726377f1-LFyflE_fw658.webp.png?raw=true');  background-size:100% 100%;
}
.homes-background{
  width:100%;  height:100vh;
  background:rgba(0, 0, 0, 0.7);
}
.homes-header{
  width:100%;text-align: center;color:#fff;
}
.homes-header>view:nth-child(1){
  font-size:40rpx;  padding:7% 0 5%;
}
.homes-header>view:nth-child(2){
  font-size:14px;width:28%;text-align: center;
  background:#FFE834;margin:0 auto;color:#000;padding:1% 0;
  height:15px;line-height: 15px;border-radius: 8px;
}
/*点击加载更多*/
.homes-footer{
  position: fixed;bottom:0px;left:0px;right: 0px;
  width:100%;text-align: center;background:#FFE834;
  color:#000;font-size:35rpx;border-radius: 0px;padding:2% 0;
}
.homes-footer::after{
  border:0;
}
/*内容*/
.homes-flexs{
  width:90%;background:#fff;padding-top:8%;opacity:1;
  border-radius: 10px;transition: all 0.5s
}
.homes-flexs .flex-header{
  width:100%;text-align: center;font-size:35rpx;font-weight: bold;color:#444;
}
.homes-flexs .flex-content{
  width:100%;margin-top:5%;  height:180px;overflow: hidden;
}
.homes-flexs .flex-content image{
  width:100%;height:180px;
}
.homes-flexs .flex-bottom{
  width:90%;margin:4% auto 2%;display: flex;flex-flow: row;    height:50px;
}
.homes-flexs .flex-bottom .flex-left{
 width:60%; height:40px;color:#444;font-size:32rpx;
}
.homes-flexs .flex-bottom .flex-left>view{
  height:20px;line-height: 20px
}
.homes-flexs .flex-bottom .flex-left>view:nth-child(1){
  font-size:28rpx;color:#666;
}
.homes-flexs .flex-bottom .flex-right{
  width:40%; height:40px;font-size:40rpx;line-height: 40px;
  color:#FAD625;text-align:right;font-weight: bold;
}
.flex-footer{
  width:90%;margin:0 auto;
}
.flex-footer .footer-wrap{
  width:18%;border:1px solid #666;text-align: center;
  margin:0 1% 5%;color:#666;font-size:25rpx;display: inline-block;
}